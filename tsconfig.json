{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "21.0.0",

  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "module": "Node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16"
  }
}
